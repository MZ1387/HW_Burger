<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-md-offset-4"><img class="img-rounded img-responsive" src="assets/img/burger.png" width="256" style="margin:0 auto;"></div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form method='POST' action='/'>
                <div class="form-group">
                    <div class="input-group col-xs-12 col-xs-offset-0">
                        <input class="form-control" type="text" placeholder="What kind of burger would you like?" name="burgerInput">
                        <span class="input-group-btn">
                          <button class="btn btn-default" type="submit">Submit</button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-2">
            <h1 class="text-lowercase text-center" style="background-color:#48ac8c;color:#ffffff;">Served Orders</h1>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th># </th>
                                    <th>Order </th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each burgers}}
                                  {{#unless this.devoured}}
                                  <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.burger_name}}</td>
                                    <td class="text-right">
                                      <form action="/{{this.id}}?_method=PUT" method="POST">
                                        <input type="hidden" name="devoured" value="true">
                                        <button class="btn btn-success btn-xs" type="submit">Eat Burger</button>
                                      </form>
                                    </td>
                                  </tr>
                                  {{/unless}}
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <h1 class="text-lowercase text-center" style="background-color:#48ac8c;color:#ffffff;">Eaten Orders</h1>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th># </th>
                                    <th>Order </th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each burgers}}
                                  {{#if this.devoured}}
                                  <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.burger_name}}</td>
                                  </tr>
                                  {{/if}}
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
